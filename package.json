{
	"name": "npm-compiler",
	"version": "1.0.3",
	"description": "A compiler for scss, js and asset sync, built with npm scripts.",
	"main": "index.js",
	"author": "nervewax <charlie@nervewax.com>",
	"license": "ISC",
	"browserslist": [ "> 5%", "last 2 versions", "not dead" ],
	"repository": {
		"type": "git",
		"url": "https://github.com/nervewax/npm-compiler"
	},
	"bugs": "https://github.com/nervewax/npm-compiler/issues",
	"keywords": [ "npm", "scripts", "npm scripts", "compiler", "sass compiler" ],
	"config": {
		"out": "public/assets"
	},
	"scripts": {
		"scss": "node-sass -o $npm_package_config_out/css/ src/scss/",
		"postcss": "postcss $npm_package_config_out/css/main.css -m -o $npm_package_config_out/css/main.min.css",
		"terser": "mkdirp $npm_package_config_out/js && terser src/js/*.js -o $npm_package_config_out/js/main.js && terser src/js/*.js -m -c -o $npm_package_config_out/js/main.min.js",
		"imagemin": "imagemin src/image/* --out-dir=$npm_package_config_out/image",
		"svgo": "mkdirp $npm_package_config_out/svg && svgo -f src/svg -o $npm_package_config_out/svg",
		"livereload": "livereload .",
		"clean:all": "rimraf $npm_package_config_out/",
		"clean:code": "rimraf $npm_package_config_out/{css,js}",
		"clean": "run-s clean:*",
		"copy:fonts": "cp -a src/font $npm_package_config_out/",
		"copy:assets": "cp -a src/{font,image,svg} $npm_package_config_out/",
		"build:css": "run-s scss postcss",
		"build:js": "run-s terser",
		"build:assets": "run-s imagemin svgo copy:fonts",
		"build:markup": "html-minifier --input-dir src --output-dir public --collapse-whitespace --remove-comments --remove-optional-tags --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true --file-ext html",
		"build": "mkdirp $npm_package_config_out && run-s clean build:*",
		"dev": "mkdirp $npm_package_config_out && run-p build:css build:js copy:fonts copy:assets build:markup",
		"watch:css": "onchange 'src/scss' -- run-s build:css",
		"watch:js": "onchange 'src/js' -- run-s build:js",
		"watch:assets": "onchange 'src/font' 'src/image' 'src/svg' -- run-s copy:assets",
		"watch:markup": "onchange 'src/**/*.html' -- run-s build:markup",
		"watch": "mkdirp $npm_package_config_out && run-p watch:* livereload"
	},
	"devDependencies": {
		"autoprefixer": "^9.6.1",
		"cssnano": "^4.1.10",
		"html-minifier": "^4.0.0",
		"imagemin-cli": "^5.0.0",
		"livereload": "^0.8.0",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^5.2.0",
		"pixrem": "^5.0.0",
		"postcss-cli": "^6.1.3",
		"rimraf": "^2.6.3",
		"svgo": "^1.3.0",
		"terser": "^4.1.2"
	}
}
