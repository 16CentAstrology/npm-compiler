{
  "name": "npm-compiler",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "-----------------CSS": "-----------------",
    "lint-scss": "prettier --write src/scss/*.scss",
    "postcss": "postcss public/assets/css/main.css -m -o public/assets/css/main.min.css",
    "scss": "node-sass -o public/assets/css/ src/scss/",
    "-----------------JS": "-----------------",
    "lint-js": "eslint src/js || true",
    "terser": "terser src/js/*.js -o public/assets/js/main.js && terser src/js/*.js -m -c -o public/assets/js/main.min.js",
    "-----------------OTHER": "-----------------",
    "cleanall": "rimraf public/assets/{css/*,js/*,font/*,image/*,svg/*}",
    "cleanassets": "rimraf public/assets/{font,image,svg}",
    "copyassets": "cp -a src/{font,image,svg} public/assets/",
    "imagemin": "imagemin src/image/* --out-dir=public/assets/image",
    "svgo": "svgo -f src/svg -o public/assets/svg",
    "livereload": "livereload .",
    "-----------------BUILD": "-----------------",
    "build:css": "run-s lint-scss scss postcss",
    "build:js": "run-s lint-js terser",
    "build:assets": "run-s imagemin svgo",
    "build": "run-s build:*",
    "-----------------WATCH": "-----------------",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:assets": "onchange \"src/font\" \"src/image\" \"src/svg\" -- run-s cleanassets copyassets",
    "watch": "run-p watch:* livereload"
  },
  "dependencies": {
    "autoprefixer": "^9.4.3",
    "cssnano": "^4.1.7",
    "eslint": "^5.10.0",
    "imagemin-cli": "^4.0.0",
    "livereload": "^0.7.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "pixrem": "^4.0.1",
    "postcss-cli": "^6.1.0",
    "prettier": "^1.15.3",
    "reload": "^2.4.0",
    "svgo": "^1.1.1",
    "terser": "^3.14.1"
  }
}
